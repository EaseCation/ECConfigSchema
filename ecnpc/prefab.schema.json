{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "npcTag": {
      "type": "string"
    },
    "pos": {
      "type": "string"
    },
    "posOffset": {
      "type": "string"
    },
    "posOverride": {
      "type": "string"
    },
    "skin": {
      "type": "string"
    },
    "animation": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "skinId": {
      "type": "integer"
    },
    "scale": {
      "type": "number"
    },
    "width": {
      "type": "number"
    },
    "height": {
      "type": "number"
    },
    "name": {
      "type": "string"
    },
    "nameTagVisible": {
      "type": "boolean"
    },
    "scoreTag": {
      "type": "string"
    },
    "variant": {
      "type": "integer"
    },
    "markVariant": {
      "type": "integer"
    },
    "dancing": {
      "type": "boolean"
    },
    "sitting": {
      "type": "boolean"
