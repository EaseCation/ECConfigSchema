{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "oneOf": [
    {
      "type": "object",
      "description": "继续对话",
      "properties": {
        "type": {
          "const": "dialogue",
          "description": "继续对话"
        },
        "dialogue": {
          "$ref": "dialogue.schema.json"
        }
      },
      "required": [
        "type",
        "dialogue"
      ]
    },
    {
      "type": "object",
      "description": "PlayerAction回调",
      "properties": {
        "type": {
          "const": "action",
          "description": "PlayerAction回调"
        },
        "callback": {
          "oneOf": [
            {
              "$ref": "../playeraction/playeraction.schema.json"
            },
            {
              "type": "array",
              "items": {
                "$ref": "../playeraction/playeraction.schema.json"
              }
            }
          ]
        }
      },
      "required": [
        "type",
        "callback"
      ]
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "const": "random",
          "description": "随机进行处理"
        },
        "handler": {
          "type": "array",
          "description": "随机处理器配置",
          "items": {
            "type": "object",
            "properties": {
              "weight": {
                "type": "number",
                "description": "随机权重"
              },
              "handler": {
                "$ref": "#"
              }
            },
            "required": ["weight", "handler"]
          }
        }
      },
      "required": ["type", "handler"],
      "description": "随机进行处理"
    },
    {
      "type": "array",
      "items": {
        "$ref": "#"
      }
    }
  ]
}